<h2>User Profile for <%= current_user.first_name %> <%= current_user.last_name %></h2>
<h3>Requested Reservations</h3>
<% current_user.requested_reservations.each do |reservation| %>
  <%= render template: "reservations/show", locals: {reservation: reservation} %>
<% end %>
<h3>Received Reservations</h3>
<% current_user.received_reservations.each do |reservation| %>
  <%= render template: "reservations/show", locals: {reservation: reservation} %>
<% end %>
