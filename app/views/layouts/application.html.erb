<!DOCTYPE html>
<html>
  <head>
    <title>SeeSpotGo</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag    'styles', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet">
<!--     <script src="../../assets/javascripts/google-map.js"></script> -->

  </head>

  <body>
    <nav>
      <div class="left-align">
        <div id='logo'></div>
        <%= link_to "SeeSpotGo", root_url, style: "text-decoration: none; color: #4eb74b" %>
      </div>
      <ul>
        <% if !user_signed_in? %>
          <li>
            <%= link_to "Login", new_user_session_url %>
          </li>
          <li>
            <%= link_to "Register", new_user_registration_url %>
          </li>
        <% else %>
          <li>
            <a href="users/<%=current_user.id%>"><%=current_user.email%></a>
          </li>
          <li>
            <%= link_to "Logout", destroy_user_session_path, :method => :delete, :class => "nav-bar"  %>
          </li>
        <% end %>
      </ul>
    </nav>

    <div class="page-container">
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
      <%= yield %>
    </div>
    <footer>footer goes here</footer>
  </body>
</html>
