  <%= form_for [@location, @space] do |f| %>
    <div class="field">
      <%= f.label :size %><br/>
      <%= f.text_field :size, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :description %><br/>
      <%= f.text_area :description, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :space_active %><br/>
      <%= f.check_box :space_active, autofocus: true %>
    </div>

    <div class="actions">
      <%= f.submit "Submit" %>
    </div>
  <% end %>
