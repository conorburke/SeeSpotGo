<h2 class="chat-room-header">Add Chat Room</h2>

<%= form_for @chat_room do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, autofocus: true, class: 'form-control' %>
  </div>

  <%= f.submit "Add!", class: 'btn btn-success' %>

  <p></p>

  <%= link_to 'Home', root_path, class: 'btn btn-success btn-outline btn-sm' %>
  <%= link_to 'Chat Home', chat_rooms_path, class: 'btn btn-success btn-outline btn-sm' %>

<% end %>